#!/usr/bin/env python3

import time
import os
import sys
import json

def timestamp(): return int(time.time())

def main():
	blurb = sys.stdin.read(-1)
	obj = {
		"blurb": blurb,
		"cdate": timestamp() }
	pathname = os.path.join("./", "posts", "notes", str(obj["cdate"]) + ".json")
	with open(pathname, "w") as fp:
		fp.write(json.dumps(obj))
		print("wrote", pathname)
	return 0

if __name__ == "__main__":
	sys.exit(main())
